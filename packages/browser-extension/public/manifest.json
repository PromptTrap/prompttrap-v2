{
  "manifest_version": 3,
  "name": "PromptTrap",
  "version": "0.1.0",
  "description": "AI usage monitoring and DLP scanning for enterprise security",
  "author": "Ward Spangler / AltGreen Research LLC",

  "permissions": [
    "storage",
    "nativeMessaging"
  ],

  "host_permissions": [
    "*://chatgpt.com/*",
    "*://chat.openai.com/*",
    "*://claude.ai/*",
    "*://gemini.google.com/*",
    "*://perplexity.ai/*",
    "*://www.perplexity.ai/*",
    "*://chat.deepseek.com/*",
    "*://deepseek.com/*",
    "*://copilot.microsoft.com/*",
    "*://www.bing.com/chat*",
    "*://poe.com/*",
    "*://huggingface.co/chat*",
    "*://you.com/*",
    "*://phind.com/*",
    "*://www.phind.com/*"
  ],

  "background": {
    "service_worker": "background.js",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": [
        "*://chatgpt.com/*",
        "*://chat.openai.com/*",
        "*://claude.ai/*",
        "*://gemini.google.com/*",
        "*://perplexity.ai/*",
        "*://www.perplexity.ai/*",
        "*://chat.deepseek.com/*",
        "*://deepseek.com/*",
        "*://copilot.microsoft.com/*",
        "*://www.bing.com/chat*",
        "*://poe.com/*",
        "*://huggingface.co/chat*",
        "*://you.com/*",
        "*://phind.com/*",
        "*://www.phind.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end",
      "all_frames": false
    }
  ],

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },

  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },

  "web_accessible_resources": [
    {
      "resources": ["banner.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
