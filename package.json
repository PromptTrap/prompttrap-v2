{
  "name": "prompttrap-monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "PromptTrap monorepo - MCP server and browser extension",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "dev": "npm run dev --workspaces",
    "test": "npm test --workspaces",
    "build:mcp": "npm run build -w @prompttrap/mcp-server",
    "build:extension": "npm run build -w @prompttrap/browser-extension",
    "build:shared": "npm run build -w @prompttrap/shared"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "ai-governance",
    "security",
    "dlp",
    "audit",
    "browser-extension"
  ],
  "author": "Ward Spangler / AltGreen Research LLC",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/wardspan/prompttrap"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
