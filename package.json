{
  "name": "prompttrap",
  "version": "0.1.0",
  "description": "Open-source MCP server for AI governance and security visibility",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "prompttrap": "./dist/index.js"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "typecheck": "tsc --noEmit",
    "dashboard": "node dist/dashboard/server.js",
    "demo": "npx tsx scripts/demo.ts",
    "prepublishOnly": "npm run build && npm test"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "ai-governance",
    "security",
    "dlp",
    "audit"
  ],
  "author": "Ward Spangler / AltGreen Research LLC",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/wardspan/prompttrap"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "better-sqlite3": "^11.8.1",
    "express": "^4.21.2",
    "js-yaml": "^4.1.0",
    "minimatch": "^10.0.1",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/express": "^5.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/minimatch": "^5.1.2",
    "@types/node": "^22.10.5",
    "tsup": "^8.3.5",
    "typescript": "^5.7.3",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
